<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GetWork" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/colorTransparentWhite</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnBackground">@color/black</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/inter_variablefont_sin</item>
        <item name="bgc">#FFFFFF</item>
        <item name="tC">#000000</item>
        <item name="mbgc">#E3F2FD</item>

    </style>


    <style name="DialogAnimations" />
    <style name="DialogAnimations.SmileWindow">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>

    <style name="DarkTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#121212</item>
        <item name="colorPrimaryVariant">#121212</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="backgroundColor">#121212</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="android:colorBackground">#121212</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#AE1448</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bgc">#121212</item>
        <item name="tC">#FFFFFF</item>
        <item name="mbgc">#1C7E48</item>
    </style>

    <style name="OrangeTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#F4CDBE</item>
        <item name="colorPrimaryVariant">#ff6d34</item>
        <item name="colorOnPrimary">@color/colorAccent</item>
        <item name="backgroundColor">#F4CDBE</item>
        <item name="colorOnSurface">#F4CDBE</item>
        <item name="colorSurface">#F4CDBE</item>
        <item name="colorOnBackground">@color/white</item>
