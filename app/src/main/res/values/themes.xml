        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">#AE1448</item>
        <item name="colorOnSecondary">#F4CDBE</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bgc">@color/white</item>
        <item name="tC">@color/black</item>
        <item name="mbgc">#F8ECE7</item>
