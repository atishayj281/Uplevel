<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="10dp">



            <ImageView
                android:id="@+id/homeLogo"
                android:layout_width="match_parent"
                android:layout_height="110dp"
                app:srcCompat="@drawable/uptoskills"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Courses"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="10.3dp"
                android:background="#d5d5d5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal"
                android:id="@+id/Courserecyclerview"
                android:layout_margin="5dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blogs"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="10.3dp"
                android:background="#d5d5d5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:id="@+id/blogrecyclerview"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open Jobs"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="10.3dp"
                android:background="#d5d5d5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:orientation="horizontal"
                android:id="@+id/HomeJobrecyclerview"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Profiles"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_marginTop="6.3dp"
                android:layout_marginRight="10.3dp"
                android:background="#d5d5d5"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:orientation="horizontal"
                android:id="@+id/HomeProfilesrecyclerview"
                />
        </LinearLayout>



    </ScrollView>

    <ProgressBar
        android:id="@+id/homeProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="#02bda8"
        android:visibility="visible"
        android:indeterminate="true"
        />

</RelativeLayout>