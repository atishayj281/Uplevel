<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="10dp"
    app:cardElevation="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/courseImageLayout"
            app:cardCornerRadius="15.65dp"
            android:layout_margin="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/courseImage"
                android:layout_width="128.35dp"
                android:layout_height="87.65dp"
                android:src="@drawable/job_recycler_view_background"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Completed"
                android:layout_gravity="right"
                android:layout_margin="10dp"
                android:textSize="24sp"
                android:textStyle="bold"
                android:visibility="gone"
                android:id="@+id/isComplete"
                android:background="@android:color/transparent"/>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:text="Web Technology"
            android:id="@+id/CourseName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="14sp"
            android:textColor="?attr/tC"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="@id/courseImageLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/courseImageLayout"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/rating"
            app:layout_constraintTop_toBottomOf="@id/CourseName"
            app:layout_constraintStart_toStartOf="@id/CourseName"
            android:text="4.6"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ratingImg"
            app:layout_constraintTop_toBottomOf="@id/CourseName"
            app:layout_constraintBottom_toBottomOf="@id/rating"
            app:layout_constraintStart_toEndOf="@id/rating"
            android:src="@drawable/ic_star"
            android:text="4.6"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/videoLessonsTag"
            android:background="@drawable/bg_free_course_video_lessons"
            app:layout_constraintTop_toBottomOf="@id/rating"
            app:layout_constraintStart_toStartOf="@id/rating"
            android:text="video lessons"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />

        <ImageView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/rewards_ic"
            app:layout_constraintTop_toBottomOf="@id/videoLessonsTag"
            app:layout_constraintStart_toStartOf="@id/videoLessonsTag"
            android:src="@drawable/ic_rewards"
            android:text="4.6"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="2dp"
            />


        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@id/rewards_ic"
            app:layout_constraintTop_toBottomOf="@id/videoLessonsTag"
            android:text="Enroll and win rewards"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:textSize="10sp"
            android:layout_marginTop="5dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>




</com.google.android.material.card.MaterialCardView>