<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourseEnquiryActivity"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_action_back"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drop us your query"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/query"
        android:layout_width="match_parent"
        android:layout_height="91dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textCursorDrawable="@drawable/grey_cursor_color"
        android:hint="Type your query here*"
        android:gravity="top"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:textSize="17sp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Details"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>


    <EditText
        android:id="@+id/contactNo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/edittext_round_shape"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textCursorDrawable="@drawable/grey_cursor_color"
        android:hint="Mobile Number*"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textSize="17sp" />
    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/edittext_round_shape"
        android:textCursorDrawable="@drawable/grey_cursor_color"
        android:hint="Enter your email.* eg.abc@gmail.com"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:textSize="17sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp"
        app:cardBackgroundColor="@color/orange"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT QUERY"
            android:textSize="21sp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:layout_gravity="center"
        android:textSize="21sp"
        android:layout_marginTop="20dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="8dp"
        app:strokeWidth="0dp"
        app:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >

            <TextView
                android:id="@+id/callheading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Why wait? Talk to a counsellor right away"
                android:gravity="center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/callheading"
                android:id="@+id/call1">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_call"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/callIcon"/>
                    <TextView
                        android:id="@+id/contact1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+917417269505"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/callIcon"
                        android:textSize="21sp"/>

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/call1"
                android:layout_marginTop="10dp"
                android:id="@+id/call2">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_call"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/contact2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+91886497444"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/callIcon"
                        android:textSize="21sp"/>
                </LinearLayout>

            </FrameLayout>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/call2"
                android:layout_marginTop="10dp"
                android:id="@+id/whatsapp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        app:srcCompat="@drawable/ic_whatsapp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"/>
                    <TextView
                        android:id="@+id/wContact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+919319772294"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_toRightOf="@id/callIcon"
                        android:textSize="21sp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>